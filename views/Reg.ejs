    <style>
        .card {
            padding: 30px;
            background: rgb(255, 253, 253);
            max-width: 900px;
            border-radius: 20px;
            margin: 100px auto;
            height: auto;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand">Welcome</a>
        <form class="form-inline">
            <button class="btn btn-light"><a href="/table">Show Table</a></button>
        </form>
    </nav>
    <div class="container row card">
       
        <h2 class="text-center">Register here</h2>
        <span style="color: red;">
            <%= err %>
        </span>
        <form method="post" action="/submit">
            <h5>Name: </h5> <input class="form-control" type="text" placeholder="Enter Name"
                aria-label="default input example" name="name">
            <span style="color: red;">
                <%= errName%>
            </span> <br />
            <h5>Email:</h5> <input class="form-control" type="text" placeholder="Enter Email"
                aria-label="default input example" name="email">
            <span style="color: red;">
                <%= errEmail%>
            </span><br />
            <h5>Mobile:</h5> <input class="form-control" type="text" placeholder="Enter Mobile number"
                aria-label="default input example" name="mobile">
            <span style="color: red;">
                <%= errMobile%>
            </span> <br />
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
        <!-- </div> -->
        <!-- <div class="col-md-4"></div> -->

    </div>
</body>