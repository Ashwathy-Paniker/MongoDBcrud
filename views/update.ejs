<body>
    <div class="container row card">

        <h2 class="text-center">Update form</h2>


        <form method="post" action="/final_update/<%= id %>">
            ID: <input class="form-control" type="text" aria-label="default input example" disabled name="name"
                value=<%=id%>>
            <h5>Name: </h5> <input class="form-control" type="text" aria-label="default input example" name="name"
                value=<%=name%>>

            <h5>Email: </h5> <input class="form-control" type="text" aria-label="default input example" name="email"
                value=<%=email%>>

            <h5>Mobile:</h5> <input class="form-control" type="text" aria-label="default input example" name="mobile"
                value=<%=mobile%>><br />
            <div class="text-center">
                <button type="submit" class="btn btn-primary"
                    href='http://localhost:8000/final_update/<%= id %>'>Update</button>
            </div>
        </form>

    </div>
</body>